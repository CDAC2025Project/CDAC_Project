#include "stm32f4xx.h"
#include "i2c.h"
#include "uart.h"
#include "bmp.h"
#include <stdio.h>

void delay_ms(uint32_t ms)
{
    for(uint32_t i=0; i < ms*16000; i++);
}

int main(void)
{
    uint32_t pres;

    UartInit(115200);
    UartPuts("UART OK\r\n");

    I2CInit();
    UartPuts("I2C OK\r\n");

    if(BMP280_Init() == 0)
        UartPuts("BMP280 OK\r\n");
    else
        UartPuts("BMP280 ERROR\r\n");

    while(1)
    {
        pres = BMP280_ReadPressure();

        char buf[40];
        sprintf(buf, "Pressure: %lu Pa\r\n", pres);
        UartPuts(buf);

        delay_ms(1000);
    }
}
