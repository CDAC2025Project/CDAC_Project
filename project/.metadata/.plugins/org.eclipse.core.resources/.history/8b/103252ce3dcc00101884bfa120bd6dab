 #ifndef OLED_H_
#define OLED_H_

#include "stm32f4xx.h"
#include "uart.h"
#include "spi.h"

/* Macros for controlling pins */
#define OLED_DC_HIGH()   (GPIOB->ODR |= (1<<0))
#define OLED_DC_LOW()    (GPIOB->ODR &= ~(1<<0))
#define OLED_RES_HIGH()  (GPIOB->ODR |= (1<<1))
#define OLED_RES_LOW()   (GPIOB->ODR &= ~(1<<1))

/* Font array for 6x8 characters */
extern const uint8_t font6x8[96][6];

/* OLED functions */
void OLED_GPIO_Init(void);
void OLED_Init(void);
void OLED_Clear(void);
void OLED_ClearPage(uint8_t page);
void OLED_SetCursor(uint8_t page, uint8_t column);
void OLED_SendCommand(uint8_t cmd);
void OLED_SendData(uint8_t data);
void OLED_PrintChar(char c);
void OLED_PrintString(const char *str);
void OLED_PrintStringAt(uint8_t page, uint8_t column, const char *str);
void OLED_SendDataBuffer(uint8_t *data, uint16_t len);

#endif /* OLED_H_ */
