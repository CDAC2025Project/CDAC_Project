#include "stm32f4xx.h"
#include "uart.h"
#include "i2c.h"
#include "bmp.h"

int main(void) {
    UartInit(115200);
    I2CInit();

    if(BMP280_Init() != 0) {
        UartPuts("BMP INIT FAILED\r\n");
        while(1);
    }

    while(1) {
        int32_t pressure = BMP280_ReadPressure();
        char buf[50];
        sprintf(buf, "Pressure: %ld Pa\r\n", pressure);
        UartPuts(buf);
        for(int i=0; i<1000000; i++); // small delay
    }
}
