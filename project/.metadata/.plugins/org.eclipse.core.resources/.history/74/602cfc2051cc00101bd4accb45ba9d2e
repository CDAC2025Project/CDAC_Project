#include "stm32f4xx.h"
#include "uart.h"
#include "dht11.h"
#include <stdio.h>

int main(void) {
    uint8_t humidity = 0, temperature = 0;
    char buffer[50];

    // Initialize UART
    UartInit(115200);

    // Initialize DHT11
    DHT11_Init();

    UartPuts("DHT11 Test Started\n");

    while(1) {
        // Read DHT11 sensor
        if(DHT11_Read(&humidity, &temperature) == 0) {
            sprintf(buffer, "Humidity: %d %% Temp: %d C\n", humidity, temperature);
            UartPuts(buffer);
        } else {
            UartPuts("DHT11 Read Error\n");
        }

        // Simple delay ~1 second
        for(volatile int i = 0; i < 5000000; i++);
    }
}
