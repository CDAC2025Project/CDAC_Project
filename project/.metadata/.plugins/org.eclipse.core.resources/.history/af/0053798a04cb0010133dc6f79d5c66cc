 #include "stm32f4xx.h"
#include "i2c.h"
#include "uart.h"
#include "bmp.h"
#include <stdio.h>

void delay_ms(uint32_t ms){
    for(uint32_t i=0;i<ms*16000;i++);
}

int main(void){
    char buf[50];
    uint32_t pressure;

    // UART init
    UartInit(115200);
    UartPuts("UART OK\r\n");

    // I2C init
    I2CInit();
    UartPuts("I2C OK\r\n");

    // BMP280 init
    UartPuts("BMP280 INIT START\r\n");
    if(BMP280_Init() == 0)
        UartPuts("BMP280 INIT OK\r\n");
    else {
        UartPuts("BMP280 INIT FAILED\r\n");
        while(1); // stop if fail
    }

    // Main loop
    while(1){
        pressure = BMP280_ReadPressure();
        sprintf(buf,"Pressure: %lu Pa\r\n", pressure);
        UartPuts(buf);
        delay_ms(1000);
    }
}
